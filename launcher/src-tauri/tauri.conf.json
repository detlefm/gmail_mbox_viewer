{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gmail_MBOX_Viewer",
  "version": "0.3.0",
  "identifier": "com.emlviewer.gmail-mbox-viewer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Gmail_MBOX_Viewer",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "converter",
        "title": "MBOX to MBXC Converter",
        "width": 600,
        "height": 500,
        "visible": false,
        "url": "converter.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../frontend/dist"
    ]
  }
}